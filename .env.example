# Environment Configuration
DEBUG=false
ENVIRONMENT=production

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=core.settings.production

# Database Configuration
POSTGRES_DB=sistema_db
POSTGRES_USER=sistema_user
POSTGRES_PASSWORD=secure-password-here

# Redis Configuration
REDIS_PASSWORD=redis-secure-password

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailu-front
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=noreply@localhost
EMAIL_HOST_PASSWORD=email-password-here
DEFAULT_FROM_EMAIL=noreply@localhost

# Security Configuration
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
X_FRAME_OPTIONS=DENY

# Celery Configuration
CELERY_BROKER_URL=redis://:redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis-password@redis:6379/0

# Monitoring Configuration
GRAFANA_PASSWORD=admin-password
GRAFANA_EMAIL=grafana@localhost
GRAFANA_EMAIL_PASSWORD=grafana-email-password

# Flower Configuration
FLOWER_USER=admin
FLOWER_PASSWORD=flower-password

# Alertmanager Configuration
ALERTMANAGER_EMAIL_PASSWORD=alert-email-password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Mailu Configuration
MAILU_SECRET_KEY=mailu-secret-key
MAILU_DOMAIN=localhost
MAILU_HOSTNAMES=localhost,mail.localhost

# SSL Configuration
SSL_EMAIL=admin@localhost
SSL_DOMAIN=localhost

